# ==============================================================================
# BACKEND ENVIRONMENT CONFIGURATION TEMPLATE
# ==============================================================================
# Copy this file to .env and fill in your actual API keys and configuration

# ==============================================================================
# AI API KEYS
# ==============================================================================
# Get your Google AI API key from: https://makersuite.google.com/app/apikey
google_generative_ai_api_key=your_google_generative_ai_api_key_here

# Get your OpenAI API key from: https://platform.openai.com/api-keys
openai_api_key=your_openai_api_key_here

# ==============================================================================
# AI SDK CONFIGURATION
# ==============================================================================
# Comma-separated list of AI providers to enable
ai_sdk_providers=google,openai

# Default AI provider to use when multiple are available
default_ai_provider=google

# Enable streaming responses from AI
enable_streaming=true

# Maximum tokens for AI responses
max_tokens=4096

# AI response creativity (0.0 = deterministic, 1.0 = very creative)
temperature=0.7

# ==============================================================================
# SERVER CONFIGURATION
# ==============================================================================
# Server host address
host=127.0.0.1

# Server port
port=8000

# Enable debug mode (true/false)
debug=true

# Log level (debug, info, warning, error)
log_level=info

# Number of worker processes
workers=1

# ==============================================================================
# CORS CONFIGURATION
# ==============================================================================
# Allowed origins for CORS (comma-separated URLs)
allowed_origins=["http://localhost:3000","http://localhost:8080"]

# Allowed HTTP methods
allowed_methods=["GET","POST","PUT","DELETE","OPTIONS"]

# Allowed HTTP headers
allowed_headers=["*"]

# ==============================================================================
# DATABASE CONFIGURATION
# ==============================================================================
# Database URL (SQLite by default)
database_url=sqlite:///./sheikh.db

# Echo SQL queries (true/false)
database_echo=false

# ==============================================================================
# SECURITY CONFIGURATION
# ==============================================================================
# JWT secret key (change this in production!)
secret_key=your-super-secret-key-change-this-in-production

# JWT algorithm
algorithm=HS256

# Access token expiration in minutes
access_token_expire_minutes=30

# ==============================================================================
# FILE UPLOAD CONFIGURATION
# ==============================================================================
# Directory for file uploads
upload_directory=./uploads

# Maximum file size in bytes (10MB = 10 * 1024 * 1024)
max_file_size=10485760

# ==============================================================================
# SHELL EXECUTION CONFIGURATION
# ==============================================================================
# Shell command timeout in seconds
shell_timeout=30

# Comma-separated list of allowed shell commands
allowed_commands=ls,cat,grep,find,wc,head,tail,sort,uniq

# ==============================================================================
# BROWSER AUTOMATION CONFIGURATION
# ==============================================================================
# Run browser in headless mode (true/false)
browser_headless=true

# Browser automation timeout in seconds
browser_timeout=30

# Browser user data directory
browser_user_data_dir=./browser/user_data

# ==============================================================================
# REDIS CONFIGURATION
# ==============================================================================
# Redis URL for caching and sessions
redis_url=redis://localhost:6379/0

# ==============================================================================
# COPILOTKIT CONFIGURATION
# ==============================================================================
# Enable CopilotKit integration (true/false)
copilotkit_enabled=true

# CopilotKit configuration path
copilotkit_config_path=/copilotkit

# ==============================================================================
# DEVELOPMENT MODE
# ==============================================================================
# Enable development mode features
dev_mode=true