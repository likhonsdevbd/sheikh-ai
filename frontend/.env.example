# Sheikh AI System - Environment Configuration
# Copy this file to .env and fill in your actual API keys

# ==============================================
# AI SDK Provider Configuration
# ==============================================

# Google Generative AI (Gemini 3 Pro Preview)
# Get your API key from: https://aistudio.google.com/app/apikey
VITE_GOOGLE_API_KEY=your_google_generative_ai_api_key_here

# OpenAI API Key (for comparison/compatibility)
# Get your API key from: https://platform.openai.com/api-keys
VITE_OPENAI_API_KEY=your_openai_api_key_here

# ==============================================
# CopilotKit Configuration
# ==============================================
# Get your public API key from: https://copilotkit.ai
VITE_COPILOTKIT_PUBLIC_KEY=your_copilotkit_public_key_here

# ==============================================
# Sheikh Backend Configuration
# ==============================================
VITE_BACKEND_URL=http://localhost:8000
VITE_API_BASE_URL=/api/v1

# ==============================================
# Enhanced Features Configuration
# ==============================================

# Enable experimental AI SDK features
VITE_ENABLE_AI_SDK=true

# Default AI provider (google, openai)
VITE_DEFAULT_AI_PROVIDER=google

# Default model for enhanced reasoning
VITE_DEFAULT_MODEL=gemini-3-pro-preview

# Enable streaming responses
VITE_ENABLE_STREAMING=true

# Enable tool calling
VITE_ENABLE_TOOLS=true

# Enable image generation
VITE_ENABLE_IMAGE_GENERATION=true

# ==============================================
# Application Configuration
# ==============================================

# Application name
VITE_APP_NAME=Sheikh AI Assistant

# Application version
VITE_APP_VERSION=2.0.0

# Environment (development, staging, production)
VITE_APP_ENV=development

# Enable debug mode
VITE_DEBUG=true

# ==============================================
# Security Configuration
# ==============================================

# Enable content safety filtering
VITE_ENABLE_SAFETY_FILTER=true

# Maximum response length
VITE_MAX_RESPONSE_LENGTH=4000

# Request timeout (milliseconds)
VITE_REQUEST_TIMEOUT=30000

# ==============================================
# Analytics & Monitoring
# ==============================================

# Enable usage analytics
VITE_ENABLE_ANALYTICS=false

# Error reporting
VITE_ENABLE_ERROR_REPORTING=false

# Performance monitoring
VITE_ENABLE_PERFORMANCE_MONITORING=true