# Sheikh AI Assistant Environment Configuration
# Copy this file to .env and modify the values according to your environment

# Server Configuration
HOST=0.0.0.0
PORT=8080
DEBUG=true
LOG_LEVEL=INFO

# OpenAI API Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# Database Configuration
DATABASE_URL=sqlite:///app/data/sheikh.db
# For PostgreSQL (optional)
# DATABASE_URL=postgresql://sheikh:sheikh123@postgres:5432/sheikh

# Redis Configuration (optional, for session storage)
REDIS_URL=redis://redis:6379/0
# REDIS_URL=redis://localhost:6379/0

# Security Configuration
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# File System Configuration
UPLOAD_DIRECTORY=app/uploads
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_EXTENSIONS=txt,pdf,png,jpg,jpeg,gif,md,py,js,html,css,json,xml

# Shell Execution Configuration
SHELL_TIMEOUT=30  # seconds
ALLOWED_COMMANDS=ls,cat,grep,find,wc,head,tail,sort,uniq,pwd,cd,mkdir,touch,echo,date,whoami,ps,top,df,du,uname,which,file
SHELL_WORKSPACE=/app/workspace

# Browser Automation Configuration
BROWSER_HEADLESS=true
BROWSER_TIMEOUT=30  # seconds
BROWSER_USER_DATA_DIR=app/browser/user_data
CHROME_REMOTE_DEBUGGING_PORT=9222

# VNC Configuration
VNC_PORT=5900
VNC_WEBSOCKET_PORT=5901
VNC_RESOLUTION=1280x720x24
VNC_PASSWORD=sheikh123

# CORS Configuration
CORS_ORIGINS=*
# CORS_ORIGINS=http://localhost:3000,http://localhost:8080,https://your-domain.com

# Service Timeout Configuration
SERVICE_TIMEOUT_MINUTES=0  # 0 = no timeout, or specify minutes

# Sandbox Environment Configuration
SANDBOX_WORKSPACE=/app/sandbox
SANDBOX_TEMP_DIR=/tmp/sheikh
SANDBOX_LOG_DIR=/app/logs

# Monitoring and Metrics
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST_SIZE=10

# Development Settings
AUTO_RELOAD=true
HOT_RELOAD=true
VERBOSE_LOGGING=false

# Feature Flags
ENABLE_BROWSER_AUTOMATION=true
ENABLE_SHELL_EXECUTION=true
ENABLE_FILE_OPERATIONS=true
ENABLE_WEB_SEARCH=true
ENABLE_VNC_ACCESS=true
ENABLE_WEBSOCKET_CONNECTIONS=true

# Docker Environment
DOCKER_ENV=true
DOCKER_NETWORK=sheikh-network
CONTAINER_NAME=sheikh-sandbox

# Environment-specific overrides
# For production, set these:
# DEBUG=false
# LOG_LEVEL=WARNING
# AUTO_RELOAD=false
# VERBOSE_LOGGING=false